@model ShopDienThoai.EntityFramework.user

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">

        <div class="row">

            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Sửa Users <small>(users)</small></h2>
                        <a class="nav navbar-right panel_toolbox btn  btn-primary" href="@Url.Action("Index" , "users")">Danh Sách</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />

                        @using (Html.BeginForm("Edit", "users", new { id = Model.id } ,  FormMethod.Post, new  { @class = "form-horizontal form-label-left", @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model=>model.id)
                            <div class="form-group row ">
                                <label class="control-label col-md-3 col-sm-3 ">Name  : </label>
                                <div class="col-md-9 col-sm-9 ">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3 col-sm-3 ">Email </label>
                                <div class="col-md-9 col-sm-9 ">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "email", @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3 col-sm-3 ">Password </label>
                                <div class="col-md-9 col-sm-9 ">
                                    @Html.PasswordFor(model => model.passwords, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.passwords, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3 col-sm-3 ">Images  </label>
                                <div class="col-md-9 col-sm-9 ">

                                    <div class="input-group">

                                        @Html.EditorFor(model => model.avatar, new { htmlAttributes = new { @id = "image", @class = "form-control", @readonly = "readonly" } })
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-primary btn-upload-file" id="btn-upload-file">UpLoad!</button>
                                        </span>
                                    </div>

                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="control-label col-md-3 col-sm-3 ">Kích Hoạt :</label>
                                <div class="col-md-9 col-sm-9 ">
                                    <div class="">
                                        @Html.EditorFor(model => model.is_active, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-9 col-sm-9  offset-md-3">

                                    <button type="submit" class="btn btn-success">Sửa</button>

                                    <button type="reset" class="btn btn-primary">Reset</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

