@model IEnumerable<ShopDienThoai.EntityFramework.order>

@{
    ViewBag.Title = "DatHang";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">


        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh Sách Hóa Đơn Hủy<small>(order)</small></h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Ngày Đặt</th>
                                                <th>Mã Đơn Hàng</th>
                                                <th>Trạng Thái</th>
                                                <th>Tên Người Mua</th>
                                                <th>Điện Thoại</th>
                                                <th>Email</th>
                                                <th>Tổng Tiền</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr id="row_@item.id">
                                                    <td style="font-size:12px;padding:0px">
                                                        @Html.DisplayFor(modelItem => item.id)
                                                    </td>
                                                    <td style="font-size:12px;padding:0px">
                                                        @item.create_at
                                                    </td>

                                                    <td style="font-size:12px;padding:0px">
                                                        @item.coupon
                                                    </td>

                                                    <td style="font-size:12px;padding:0px">
                                                        @if (item.order_Status_id == 3)
                                                        {
                                                            <div class="alert alert-danger">Hủy</div>
                                                        }

                                                    </td>
                                                    <td style="font-size:12px;padding:0px">
                                                        @item.fullname

                                                    </td>
                                                    <td style="font-size:12px;padding:0px">
                                                        @item.phone
                                                    </td>
                                                    <td style="font-size:12px;padding:0px">
                                                        @item.email
                                                    </td>
                                                    <td style="font-size:12px;padding:0px">
                                                        @String.Format("{0:0,0}", item.total)<sup>vnđ</sup>
                                                    </td>
                                                    <td style="font-size:12px;padding:0px">

                                                        @Html.ActionLink("Chi Tiết", "Edit", new { id = item.id }, new { @class = "btn btn-primary btn-sm" })

                                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.id }, new AjaxOptions
                                                           {
                                                               Confirm = "Bạn muốn xóa bản ghi này không",
                                                               OnComplete = "$('#row_" + item.id + "').remove()",
                                                               HttpMethod = "Delete"
                                                           }, new { @class = "btn btn-danger btn-sm" })
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>