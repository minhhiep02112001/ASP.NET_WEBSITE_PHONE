@model ShopDienThoai.Object.CustomerLogin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <!-- .col-md-8 -->
            <div class="col-12">
                <div class="comment-form-wrap pt-5">
                    <h3 class="mb-5">Login</h3>
                    @using (Html.BeginForm("PostLogin", "Login", FormMethod.Post, new { @class = "p-5 bg-light" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="email">Email *</label>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" , @required = "required" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="website">PassWord :</label>
                            @Html.PasswordFor(model => model.password, new { @class = "form-control" , @minlegth="6" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Login" class="btn py-3 px-4 btn-primary">
                        </div>


                    }
                </div>
            </div>

        </div>
    </div>
</section>

