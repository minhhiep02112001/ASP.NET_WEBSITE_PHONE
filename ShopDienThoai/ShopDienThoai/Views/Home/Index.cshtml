<section class="ftco-section ftco-category ftco-no-pt">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6 order-md-last align-items-stretch d-flex">
                        @if (articleHots.Count > 0)
                        {
                            <div class="category-wrap-2 ftco-animate img align-self-stretch d-flex"
                                 style="background-image: url(@articleHots[0].images);">
                                <div class="text text-center">
                                    <h2>@articleHots[0].title Giảm Giá 90%</h2>

                                    <p><a href="@Url.RouteUrl("ChiTietTinTuc" , new { slug = articleHots[0].slug})" class="btn btn-primary">Chi Tiết</a></p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        @if (articleHots.Count > 1)
                        {

                            <div class="category-wrap ftco-animate img mb-4 d-flex align-items-end"
                                 style="background-image: url(@articleHots[1].images);">
                                <div class="text px-3 py-1">
                                    <h2 class="mb-0"><a href="@Url.RouteUrl("ChiTietTinTuc" , new { slug = articleHots[1].slug})">@articleHots[1].title</a></h2>
                                </div>
                            </div>

                        }
                        @if (articleHots.Count > 2)
                        {

                            <div class="category-wrap ftco-animate img d-flex align-items-end"
                                 style="background-image: url(@articleHots[2].images);">
                                <div class="text px-3 py-1">
                                    <h2 class="mb-0"><a href="@Url.RouteUrl("ChiTietTinTuc" , new { slug = articleHots[2].slug})">@articleHots[2].title</a></h2>
                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                @if (articleHots.Count > 3)
                {

                    <div class="category-wrap ftco-animate img mb-4 d-flex align-items-end"
                         style="background-image: url(@articleHots[3].images);">
                        <div class="text px-3 py-1">
                            <h2 class="mb-0"><a href="@Url.RouteUrl("ChiTietTinTuc" , new { slug = articleHots[3].slug})">@articleHots[3].images</a></h2>
                        </div>
                    </div>

                }
                @if (articleHots.Count > 4)
                {

                    <div class="category-wrap ftco-animate img mb-4 d-flex align-items-end"
                         style="background-image: url(@articleHots[4].images);">
                        <div class="text px-3 py-1">
                            <h2 class="mb-0"><a href="@Url.RouteUrl("ChiTietTinTuc" , new { slug = articleHots[4].slug})">@articleHots[4].images</a></h2>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <span class="subheading">Sản phẩm của chúng tôi</span>
                <h2 class="mb-4">Sản phẩm nổi bật</h2>
                @*  <p>Chúng tôi luôn ưu tiên chất lượng sản phẩm làm đầu vì sức khỏe của các bạn.</p>*@
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var prod_hot in productHots)
            {
                <div class="  col-6 col-md-6 col-lg-3 ftco-animate">
                    <div class="product">
                        <a href="@Url.RouteUrl("Product" , new { slug = prod_hot.slug})" class="img-prod">
                            <img class="img-fluid" src="@prod_hot.images"
                                 alt="Colorlib Template">
                            <span class="status">Hot</span>
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">
                            <h3><a href="@Url.RouteUrl("Product" , new { slug = prod_hot.slug})">@prod_hot.name</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price">
                                        <span class="mr-2 price-dc">@String.Format("{0:0,0}", prod_hot.price)<sup>vnđ</sup></span>
                                        <span class="price-sale">@String.Format("{0:0,0}", prod_hot.sale)<sup>vnđ</sup></span>
                                    </p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a href="#"
                                       class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="ion-ios-menu"></i></span>
                                    </a>
                                    <a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1" data-id="@prod_hot.id">
                                        <span><i class="ion-ios-cart"></i></span>
                                    </a>
                                    <a href="#" class="heart d-flex justify-content-center align-items-center ">
                                        <span><i class="ion-ios-heart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

