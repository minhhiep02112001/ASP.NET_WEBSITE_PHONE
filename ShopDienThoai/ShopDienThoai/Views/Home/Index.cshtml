
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var productHots = (@ViewBag.ProductHot != null) ? (List<ShopDienThoai.EntityFramework.product>)ViewBag.ProductHot : null;
    var productNews = (@ViewBag.productNew != null) ? (List<ShopDienThoai.EntityFramework.product>)ViewBag.productNew : null;
    var articleHots = (@ViewBag.AriclesHot != null) ? (List<ShopDienThoai.EntityFramework.article>)ViewBag.AriclesHot : null;
    var Banners = (@ViewBag.Banners != null) ? (List<ShopDienThoai.EntityFramework.banner>)ViewBag.Banners : null;
    var ProductSellings = (@ViewBag.ProductSelling != null) ? (List<ShopDienThoai.EntityFramework.product>)ViewBag.ProductSelling : null;
}
@section jsFooter{
    <script>

        $(document).on('click', '.buy-now', function (event) {
            event.preventDefault();
            var id = $(this).data("id");
            AddCart(id, 1);
        });



    </script>

}
<section id="home-section" class="hero">
    <div class="home-slider owl-carousel">
        @foreach (var item in Banners)
        {
            <div class="slider-item" style="background-image: url(@item.images);">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">

                        <div class="col-md-12 ftco-animate text-center">
                            <h1 class="mb-2">@item.title</h1>
                            <h2 class="subheading mb-4">@Html.Raw(item.descriptions)</h2>
                            <p><a href="@item.url" class="btn btn-primary" target="@item.targets">Xem chi tiết</a></p>
                        </div>

                    </div>
                </div>
            </div>
        }


    </div>
</section>

